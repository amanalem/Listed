<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Item</title>
</head>
<body>
    <h1>Add a new list item</h1>
    <form action="/listed/biglist" method="POST">
        <label for="entry">List Item:</label>
        <input type="text" name="entry" size="75"><br><br>
        <label for="ogPriority">Item Priority</label>
        <input type="radio" name="ogPriority" value="A" class="ogPriority">A
        <input type="radio" name="ogPriority" value="B" class="ogPriority">B
        <input type="radio" name="ogPriority" value="C" class="ogPriority">C<br>
        <input type="text" name="priority" placeholder="" value="" id="priority" style="display: none;">
        <br>
        <br>
        <input type="submit" value="Create">

    </form>

    <script>
        let priority = document.querySelector('#priority')
        // let aVal = "A"
        // let bVal = "B"
        // let cVal = "C"

        let pVal = ["A", "B", "C"]

        let ogPriority = document.querySelectorAll('.ogPriority')

        ogPriority[0].addEventListener('click', (e) => {
            priority.value = pVal[0];
            priority.placeholder = pVal[0];
        })
        ogPriority[1].addEventListener('click', (e) => {
            priority.value = pVal[1];
            priority.placeholder = pVal[1];
        })
        ogPriority[2].addEventListener('click', (e) => {
            priority.value = pVal[2];
            priority.placeholder = pVal[2];
        })

        // let pA = document.querySelector('#A')
        // pA.addEventListener('click', () => {
        //     priority = aVal
        // })
    </script>
</body>
</html>